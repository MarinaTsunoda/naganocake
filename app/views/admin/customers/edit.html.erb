<div class="container">
  <div class="row">
    <div class="col-12 mx-auto">
      <h4 class="m-3"><span class="bg-light"><%= @customer.last_name %><%= @customer.first_name %>さんの会員情報編集</span></h4>
      <%=form_with model: @customer, url:admin_customer_path(@customer.id), method: :patch do |f| %>
        <table cellpadding="5">
          <tr>
            <th><%= f.label :'会員ID' %></th>
            <td><%= @customer.id %></td>
          </tr>
          <tr>
            <th><%= f.label :'氏名' %></th>
            <td><%= f.text_field :last_name %><%= f.text_field :first_name %></td>
          </tr>
          <tr>
            <th><%= f.label :'フリガナ' %></th>
            <td><%= f.text_field :last_name_kana %><%= f.text_field :first_name_kana %></td>
          </tr>
          <tr>
            <th><%= f.label :'郵便番号' %></th>
            <td><%= f.text_field :postal_code %></td>
          </tr>
          <tr>
            <th><%= f.label :'住所' %></th>
            <td><%= f.text_field :address %></td>
          </tr>
          <tr>
            <th><%= f.label :'電話番号' %></th>
            <td><%= f.telephone_field :telephone_number %></td>
          </tr>
          <tr>
            <th><%= f.label :'メールアドレス' %></th>
            <td><%= f.email_field :email %></td>
          </tr>
          <tr>
            <th><%= f.label :'会員ステータス' %></th>
            <td>
              <%= f.radio_button :is_deleted, :false %>
              <%= f.label :is_deleted, "有効", value: :false, style: "display: inline-block;" %>
              <%= f.radio_button :is_deleted, :true %>
              <%= f.label :is_deleted, "退会", value: :true, style: "display: inline-block;" %>
            </td>
          </tr>
        </table>
        <%= f.submit "変更を保存", class:"btn btn-success px-4" %>
      <% end %>
    </div>
  </div>
</div>