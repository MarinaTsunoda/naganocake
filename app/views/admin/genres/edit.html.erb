<div class="container">
  <div class="row">
    <div class="col-12 mx-auto">
      <h4 class="m-3"><span class="bg-light">ジャンル編集</span></h4>

      <div class="mb-4">
        <%= form_with model: @genre, url:admin_genre_path(@genre.id), method: :patch do |f| %>
          <%= f.label :'ジャンル名' %>
          <%= f.text_field :name, autofocus: true, class:"mx-5" %>
          <%= f.submit "変更を保存", class:"btn btn-success px-4" %>
        <% end %>
      </div>
    </div>
  </div>
</div>