<div class="container">
  <div class="row">
    <div class="col-12 mx-auto">
      <h4 class="m-3"><span class="bg-light">商品編集</span></h4>

      <div class="mb-4">
        <%= form_with model: @item, url:admin_item_path(@item.id), method: :patch do |f| %>
          <table cellpadding="5" class="w-75 mx-auto">
            <tr>
              <td>商品画像</td>
              <td><%= f.file_field :image, accept:"image/*" %></td>
            </tr>
            <tr>
              <td><%= f.label :'商品名' %></td>
              <td><%= f.text_field :name, size: 40 %></td>
            </tr>
            <tr>
              <td><%= f.label :'商品説明' %></td>
              <td><%= f.text_area :introduction, size: "40x5" %></td>
            </tr>
            <tr>
              <td><%= f.label :'ジャンル' %></td>
              <td><%= f.collection_select :genre_id, @genres, :id, :name %></td>
            </tr>
            <tr>
              <td><%= f.label :'税抜価格' %></td>
              <td><%= f.number_field :price %>円</td>
            </tr>
            <tr>
              <td><%= f.label :'販売ステータス' %></td>
              <td>
                <%= f.radio_button :is_active, :true %>
                <%= f.label :is_active, "販売中", value: :true, style: "display: inline-block;" %>
                <%= f.radio_button :is_active, :false %>
                <%= f.label :is_active, "販売停止中", value: :false, style: "display: inline-block;" %>
              </td>
            </tr>
          </table>
          <div class="text-center">
            <%= f.submit "変更を保存", class:"btn btn-success px-4" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>