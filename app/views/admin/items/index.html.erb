<div class="container">
  <div class="row">
    <div class="col-12 mx-auto">
      <h4 class="m-3"><span class="bg-light">商品一覧</span></h4>
      <%= link_to new_admin_item_path do %>
        <i class="far fa-plus-circle"></i>
      <% end %>
      <% @items.each do |item| %>
        <table>
          <tr>
            <th>商品ID</th>
            <th>商品名</th>
            <th>税抜価格</th>
            <th>ジャンル</th>
            <th>ステータス</th>
          </tr>
          <tr>
            <td><%= item.id %></td>
            <td><%= link_to item.name, admin_item_path(item.id) %></td>
            <td><%= item.price %></td>
            <td><%= item.genre.name %></td>
            <td>
              <% if item.is_active %>
                販売中
              <% elsif %>
                販売停止中
              <% end %>
            </td>
          </tr>
        </table>
      <% end %>
    </div>
  </div>
</div>
