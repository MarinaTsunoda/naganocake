<div class="container">
  <div class="row">
    <div class="col-12 mx-auto">
      <h4 class="m-3"><span class="bg-light">配送先編集</span></h4>
      <table cellpadding="5">
        <%= form_with model: @address, url: address_path(@address.id), method: :patch do |f| %>
          <tr>
            <th>郵便番号(ハイフンなし)</th>
            <td><%= f.text_field :postal_code %></td>
          </tr>
          <tr>
            <th>住所</th>
            <td colspan="3"><%= f.text_field :address, class:"w-100" %></td>
          </tr>
          <tr>
            <th>宛名</th>
            <td><%= f.text_field :name %></td>
            <td></td>
            <td><%= f.submit '変更内容を保存', class:"btn btn-success px-4 mt-3" %></td>
          </tr>
        <% end %>
      </table>