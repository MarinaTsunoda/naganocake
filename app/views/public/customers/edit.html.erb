<div class="container">
  <div class="row">
    <div class="col-12 mx-auto">
      <%= render "devise/shared/error_messages", resource: @customer %>
      <h4 class="m-3"><span class="bg-light">会員情報編集</span></h4>
      <%= form_with model: @customer, url: customers_information_path, method: :patch do |f| %>
        <table cellpadding="5" sytle="width:100%">
          <tr>
            <th sytle="width:30%">氏名</th>
            <td style="width:25%"><%= f.text_field :last_name, autofocus: true %></td>
            <td style="width:25%"><%= f.text_field :first_name %></td>
          </tr>
          <tr>
            <th>フリガナ</th>
            <td><%= f.text_field :last_name_kana %></td>
            <td><%= f.text_field :first_name_kana %></td>
          </tr>
          <tr>
            <th>郵便番号</th>
            <td><%= f.text_field :postal_code %></td>
          </tr>
          <tr>
            <th>住所</th>
            <td colspan="3"><%= f.text_field :address, class:"w-100" %></td>
          </tr>
          <tr>
            <th>電話番号(ハイフンなし)</th>
            <td><%= f.telephone_field :telephone_number %></td>
          </tr>
          <tr>
            <th>メールアドレス</th>
            <td><%= f.email_field :email %></td>
          </tr>
          <tr>
            <th></th>
            <td><%= f.submit '編集内容を保存', class:"btn btn-success px-4 mt-3" %></td>
            <td></td>
            <td><%= link_to '退会する', customers_unsubscribe_path, class:"btn btn-danger px-4 mt-3" %></td>
          </tr>
        </table>
      <% end %>
    </div>
  </div>
</div>