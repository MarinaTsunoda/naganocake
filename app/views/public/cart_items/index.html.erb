<div class="container">
  <div class="row">
    <div class="col-12 mx-auto">
      <h4 class="m-3"><span class="bg-light">マイページ</span></h4>
      <table>
        <tr>
          <th>商品名</th>
          <th>単価(税込)</th>
          <th>数量</th>
          <th>小計</th>
          <th></th>
        </tr>
        <% @cart_items.each do |cart_item| %>
        <tr>
          <td><%= cart_item.name %></td>
          <td><%= number_with_precision(cart_item.price*1.1, delimiter: ",", precision: 3,strip_insignificant_zeros: true) %></td>
          <td><%= cart_item.amount %></td>
          <td></td>
          <td></td>
        </tr>
        <% end %>
      </table>
      <%= link_to '買い物を続ける', items_path, class:"btn btn-primary px-4" %>
      <table>
        <tr>
          <td>合計金額</td>
          <td><%= %></td>
        </tr>
      </table>
      <%= link_to '情報入力に進む', new_order_path, class:"btn btn-success px-4" %>
    </div>
  </div>
</div>
