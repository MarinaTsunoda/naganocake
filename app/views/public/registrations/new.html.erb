<div class="container">
  <div class="row">
    <%= render "devise/shared/error_messages", resource: resource %>
    <div class="col-12 mx-auto">
      <h4 class="m-3"><span class="bg-light">新規会員登録</span></h4>
      <%= form_with model: @customer, url: customer_registration_path, method: :post do |f| %>
        <table cellpadding="5" sytle="width:100%">
          <tr>
            <th sytle="width:30%">名前</th>
            <td style="width:10%">(姓)</td>
            <td style="width:25%"><%= f.text_field :last_name, autofocus: true, placeholder: "令和" %></td>
            <td style="width:10%" class="pl-3">(名)</td>
            <td style="width:25%"><%= f.text_field :first_name, placeholder: "道子" %></td>
          </tr>
          <tr>
            <th>フリガナ</th>
            <td>(セイ)</td>
            <td><%= f.text_field :last_name_kana, placeholder: "レイワ" %></td>
            <td class="pl-3">(メイ)</td>
            <td><%= f.text_field :first_name_kana, placeholder: "ミチコ" %></td>
          </tr>
          <tr>
            <th>メールアドレス</th>
            <td></td>
            <td><%= f.email_field :email, placeholder: "sample@example.com" %></td>
          </tr>
          <tr>
            <th>郵便番号(ハイフンなし)</th>
            <td></td>
            <td><%= f.text_field :postal_code, placeholder: "0000000" %></td>
          </tr>
          <tr>
            <th>住所</th>
            <td></td>
            <td colspan="3"><%= f.text_field :address, placeholder: "東京都渋谷区代々木神園町0-0", class:"w-100" %></td>
          </tr>
          <tr>
            <th>電話番号(ハイフンなし)</th>
            <td></td>
            <td><%= f.telephone_field :telephone_number, placeholder: "0000000000" %></td>
          </tr>
          <tr>
            <th>パスワード(6文字以上)</th>
            <td></td>
            <td><%= f.password_field :password %></td>
          </tr>
          <tr>
            <th>パスワード(確認用)</th>
            <td></td>
            <td><%= f.password_field :password_confirmation %></td>
          </tr>
          <tr>
            <th></th>
            <td></td>
            <td><%= f.submit '新規登録', class:"btn btn-success px-4 mt-3" %></td>
          </tr>
        </table>
      <% end %>
    </div>
  </div>
</div>